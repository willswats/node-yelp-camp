<% layout('layouts/boilerplate') %>
<div id="error" class="d-flex flex-column flex-grow-1 container my-5">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">Error: <%=err.statusCode || 500 %> - <%= err.message %></h4>
                <% if (process.env.NODE_ENV !== "production") { %>}
                <div style="overflow-wrap: break-word;">
                    <p><%=err.stack%></p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>